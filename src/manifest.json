{
  "manifest_version": 3,
  "name": "Floating Modal Extension",
  "version": "1.0.0",
  "description": "Shows a floating icon with a modal",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "identity"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["modal.html"],
    "matches": ["<all_urls>"]
  }]
}